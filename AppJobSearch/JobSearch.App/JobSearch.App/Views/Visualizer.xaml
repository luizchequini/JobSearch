                                <FormattedString>
                                    <Span Text="Pub. "/>
                                    <Span Text="19/09/2020"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Text="Back-End Developer" Style="{StaticResource JobTitleLabel}" Grid.Row="1"/>
