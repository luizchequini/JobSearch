                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Label Text="CLT" Style="{StaticResource JobTitleLabel}" Grid.Row="4"/>
                        <Label Text="C++, Node" Grid.Row="5"/>
                    </Grid>


                    <Label Text="Interessados enviar e-mail para:"  Style="{StaticResource JobTitleLabel}"/>
                    <Label Text="rh@sigaideia.com.br" Style="{StaticResource CompanyCityStateLabel}"/>

