                                <FormattedString>
                                    <Span Text="id. " Style="{StaticResource MoneyLabel}"/>
                                    <Span Text="12345" Style="{StaticResource CurrencyLabel}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>

                        <Label Text="São Paulo, SP" Style="{StaticResource CompanyCityStateLabel}" Grid.Row="2"/>
