<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="JobSearch.App.Views.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="JobSearch" />
            <BoxView Color="#D7CCFF" HeightRequest="1"/>
            <Grid VerticalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Entry Placeholder="E-mail" Grid.Row="0" Grid.ColumnSpan="2"/>
                <Entry Placeholder="Senha" IsPassword="True" Grid.Row="1" Grid.ColumnSpan="2"/>
                <Button Text="Acessar" Grid.Row="2"/>
                <Button Text="Cadastrar" Grid.Row="2" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>